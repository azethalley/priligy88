---
export const prerender = false;
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import PageHeader from "@/partials/PageHeader.astro";
import { render, getEntry } from "astro:content";
import type { CollectionEntry } from "astro:content";

// get static paths for all pages (optional in SSR mode, but kept for compatibility)
export async function getStaticPaths() {
  const COLLECTION_FOLDER = "pages";

  const pages = await getSinglePage(COLLECTION_FOLDER);

  const paths = pages.map((page) => ({
    params: {
      regular: page.id,
    },
    props: { page },
  }));
  return paths;
}

// In SSR mode, fetch the page dynamically if not provided via props
let page: CollectionEntry<"pages"> | undefined = Astro.props?.page as CollectionEntry<"pages"> | undefined;

if (!page) {
  const { regular } = Astro.params;
  if (!regular) {
    return Astro.redirect("/404");
  }

  try {
    const fetchedPage = await getEntry("pages", regular);
    
    if (!fetchedPage) {
      return Astro.redirect("/404");
    }
    
    // Check if page is a draft
    if (fetchedPage.data.draft === true) {
      return Astro.redirect("/404");
    }
    
    page = fetchedPage;
  } catch (error) {
    console.error(`Error fetching page "${regular}":`, error);
    return Astro.redirect("/404");
  }
}

if (!page) {
  return Astro.redirect("/404");
}

const { title, meta_title, description, image } = page.data;
const { Content } = await render(page);
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <PageHeader title={title} />
  <section class="section-sm">
    <div class="container">
      <div class="row justify-center">
        <div class="lg:col-10">
          <div class="content">
            <Content />
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>
